<!-- Add a product -->

<div class="m-3" style="overflow: auto;">
  <div class="col-sm-6 col-md-6 col-lg-8 mx-auto">
    <center><h3>Add a Product</h3></center>

    <div class="card border-dark">
      <div class="card-body">
        <form class="needs-validation" method="POST" action="/addProduct">
          <label>Product ID</label>
          <input
            type="number"
            class="form-control"
            name="productID"
            placeholder="Enter Product ID"
            min="0"
            max="2147483647"
            step="1"
            required
          />

          <br />

          <label>Product Name</label>
          <input
            type="text"
            class="form-control"
            name="productName"
            placeholder="Enter Product Name"
            required
          />

          <br />

          <label>Stock</label>
          <input
            type="number"
            class="form-control"
            name="stock"
            placeholder="Enter Stock"
            min="0"
            max="2147483647"
            step="1"
            required
          />

          <br />

          <label>Price</label>
          <input
            type="number"
            class="form-control"
            name="price"
            placeholder="Enter Price"
            min="0"
            max="99999999.99"
            step="0.01"
            required
          />

          <br />

          <button class="btn btn-primary" type="submit">Add</button>
        </form>
      </div>
    </div>
  </div>
</div>  